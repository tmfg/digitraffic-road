                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${org.apache.cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sourceRoot>${basedir}/target/generated-sources/cxf</sourceRoot>
                            <defaultOptions>
                                <extraargs>
                                    <extraarg>-xjc-mark-generated</extraarg>
                                    <!-- Fix: A class/interface with the same name TieOsoiteV0 is already in use. -->
                                    <extraarg>-autoNameResolution</extraarg>
                                </extraargs>
                            </defaultOptions>
                            <additionalJvmArgs>
                                -Dorg.apache.cxf.Logger=null
                            </additionalJvmArgs>
                            <wsdlOptions>
                                <!-- Tiesääasemien staattiset tiedot / The static information of the road weather stations -->
                                <wsdlOption>
                                    <wsdl>
                                        ${basedir}/src/main/resources/schemas/lotju/metadata/v6/TiesaaMetatiedot.wsdl
                                    </wsdl>
                                    <packagenames>
                                        <packagename>fi.livi.digitraffic.tie.external.lotju.metadata.tiesaa
                                        </packagename>
                                    </packagenames>
                                </wsdlOption>

                                <!-- LAM-pisteiden staattiset tiedot / The static information of the Traffic Flow Measurement System (TMS) -->
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/schemas/lotju/metadata/v7/LAMMetatiedot.wsdl
                                    </wsdl>
                                    <packagenames>
