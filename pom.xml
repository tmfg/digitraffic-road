                                        ${basedir}/src/main/resources/schemas/lotju/metadata/v7/KameraMetatiedot.wsdl
                                    </wsdl>
                                    <packagenames>
                                        <packagename>fi.livi.digitraffic.tie.external.lotju.metadata.kamera
                                        </packagename>
                                    </packagenames>
                                </wsdlOption>
                            </wsdlOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <!-- https://github.com/highsource/jaxb-tools?tab=readme-ov-file#jaxb-maven-plugin-->
                <groupId>org.jvnet.jaxb</groupId>
                <artifactId>jaxb-maven-plugin</artifactId>
                <version>${org.jvnet.jaxb.version}</version>
                <configuration>
                    <specVersion>3.0</specVersion>
                    <extension>true</extension>
                    <args>
                        <arg>-Xannotate
                        </arg> <!-- Annotate with XmlRootElement with annox, see e.g. DATEXII_3_Bindings.xjb -->
                        <!--<arg>-XremoveAnnotation</arg>--> <!-- remove annotations defined in bindigs file with annox:removeAnnotation -->
                        <arg>-XautoNameResolution
                        </arg> <!-- Fix: A class/interface with the same name is already in use. -->
                        <arg>-Xvalue-constructor</arg>
                        <arg>-Xfluent-api</arg><!-- Generate withProperty methods -->
                        <arg>-mark-generated</arg>
                        <arg>-Xinheritance</arg>
                        <arg>-Xsimplify
                        </arg> <!-- Simplify classess and e.g. use plural property names where applicable -->
                    </args>
                    <plugins>
                        <!-- General plugings e.g. fluent-api -->
                        <plugin>
                            <groupId>org.jvnet.jaxb</groupId>
                            <artifactId>jaxb-plugins</artifactId>
                            <version>4.0.8</version>
                        </plugin>
                        <!-- Annotate with XmlRootElement with annox, see e.g. DATEXII_3_Bindings.xjb -->
                        <plugin>
                            <groupId>org.jvnet.jaxb</groupId>
                            <artifactId>jaxb-plugin-annotate</artifactId>
                            <version>4.0.8</version>
                        </plugin>
                    </plugins>
                </configuration>
                <executions>
                    <!--Datex2 3.5 TMS-->
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <id>DATEXII_3_5_tms</id>
                        <configuration>
                            <!--<forceRegenerate>true</forceRegenerate>-->
                            <schemaDirectory>${basedir}/src/main/resources/schemas/datex2/tms/3_5/xml</schemaDirectory>
                            <schemaIncludes>DATEXII_3_D2Payload.xsd</schemaIncludes>
                            <bindingDirectory>${basedir}/src/main/resources/schemas</bindingDirectory>
                            <bindingIncludes>
                                <bindingInclude>jaxb-bindings/JAXBBindingsGlobal.xjb</bindingInclude>
                                <bindingInclude>datex2/tms/3_5/xml/DATEXII_3.xjb</bindingInclude>
                            </bindingIncludes>
                            <generatePackage>fi.livi.digitraffic.tie.tms.datex2.v3_5</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/datex2-tms-v3_5-xml
                            </generateDirectory>
                        </configuration>
                    </execution>

                    <!--Datex2 2.2.3 with Finnish definitions -->
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <id>DATEXIISchema_2_2_3_with_definitions_FI</id>
                        <configuration>
                            <!--<forceRegenerate>true</forceRegenerate>-->
                            <schemaDirectory>${basedir}/src/main/resources/schemas/datex2/announcements/2_2_3_fi</schemaDirectory>
                            <schemaIncludes>
                                <include>DATEXIISchema_2_2_3_with_definitions_FI.xsd</include>
                            </schemaIncludes>
                            <bindingDirectory>${basedir}/src/main/resources/schemas/</bindingDirectory>
                            <bindingIncludes>
                                <bindingInclude>jaxb-bindings/JAXBBindingsGlobal.xjb</bindingInclude>
                                <bindingInclude>datex2/announcements/2_2_3_fi/DATEXIISchema_2_2_3_with_definitions_FI.xjb
                                </bindingInclude>
                            </bindingIncludes>
                            <generatePackage>fi.livi.digitraffic.tie.datex2.v2_2_3_fi</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/datex2-v2_2_3_fi-xml
                            </generateDirectory>
                        </configuration>
